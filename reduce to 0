import java.util.Scanner;

public class reduce_to_0 {
    public static void main(String [] args){
        Scanner sc=new Scanner(System.in);
        int a;
        int s=0;
        System.out.println("enter a number: ");
        a=sc.nextInt();
        while(a>0){
            if(a%2==0){
                a=a/2;
            }
            else{
                a=a-1;
            }
            s=s+1;
        }
        System.out.println("number of steps required to reduce it to 0 is"+ s);
    }
}
